<form method="post" action="{{ path('app_sale_sale_order_header_release', {'id': saleOrderHeader.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('release' ~ saleOrderHeader.id) }}">
    <button class="btn btn-warning btn-sm"
            data-controller="dom-element"
            data-action="dom-element#confirm"
            data-dom-element-confirm-message-param="Are you sure you want to release this transaction?">
        Release SO
    </button>
</form>
