    "totalQuantity": "{{ saleOrderHeader.totalQuantity|default|number_format(0) }}",
    "subTotal": "{{ saleOrderHeader.subTotal|default|number_format(2) }}",
    "discountNominal": "{{ saleOrderHeader.discountNominal|default|number_format(2) }}",
    "taxNominal": "{{ saleOrderHeader.taxNominal|default|number_format(2) }}",
