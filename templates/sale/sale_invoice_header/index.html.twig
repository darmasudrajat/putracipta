{% extends 'layout_page.html.twig' %}

{% block title 'Manage Sale Invoice' %}

{% block toolbar %}
    {% if is_granted('ROLE_SALE_INVOICE_ADD') %}
        <a class="btn btn-success btn-sm" href="{{ path('app_sale_sale_invoice_header_new') }}">Add</a>
    <a class="btn btn-primary btn-sm" href="{{ path('app_sale_sale_invoice_header_index_outstanding_delivery_header') }}">Outstanding Delivery</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% for type, flashes in app.session.flashBag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                <strong>{{ flash.title }}</strong> {{ flash.message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div data-controller="html-loader"
         data-html-loader-url-value="{{ path('app_sale_sale_invoice_header__list') }}"
         data-html-loader-auto-load-value="true">
    </div>
{% endblock %}
