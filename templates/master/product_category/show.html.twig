{% extends 'layout_page.html.twig' %}

{% block title 'Show Product Category' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_product_category_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_product_category_edit', {'id': productCategory.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Is Inactive</th>
                <td>{{ productCategory.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ productCategory.name }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/product_category/_delete_form.html.twig') }}#}
{% endblock %}
