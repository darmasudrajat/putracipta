{% extends 'layout_page.html.twig' %}

{% block title 'Show Material Category' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_material_category_index') }}">Manage</a>
    {% if is_granted('ROLE_MATERIAL_CATEGORY_EDIT') %}
        <a class="btn btn-warning btn-sm" href="{{ path('app_master_material_category_edit', {'id': materialCategory.id}) }}">Edit</a>
    {% endif %}
    {% if is_granted('ROLE_MATERIAL_CATEGORY_ADD') %}
        <a class="btn btn-success btn-sm" href="{{ path('app_master_material_category_new') }}">Add</a>
    {% endif %}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ materialCategory.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ materialCategory.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ materialCategory.isInactive ? 'Inactive' : 'Active' }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/material_category/_delete_form.html.twig') }}#}
{% endblock %}
