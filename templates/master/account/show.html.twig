{% extends 'layout_page.html.twig' %}

{% block title 'Show Account' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_account_index') }}">Manage</a>
    {% if is_granted('ROLE_ACCOUNT_EDIT') %}
        <a class="btn btn-warning btn-sm" href="{{ path('app_master_account_edit', {'id': account.id}) }}">Edit</a>
    {% endif %}
    {% if is_granted('ROLE_ACCOUNT_ADD') %}
        <a class="btn btn-success btn-sm" href="{{ path('app_master_account_new') }}">Add</a>
    {% endif %}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ account.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ account.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/account/_delete_form.html.twig') }}#}
{% endblock %}
