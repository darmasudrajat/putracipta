{% extends 'layout_page.html.twig' %}

{% block title 'Show Work Order Check Sheet' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_work_order_check_sheet_index') }}">Manage</a>
    {% if is_granted('ROLE_CHECK_SHEET_EDIT') %}
        <a class="btn btn-warning btn-sm" href="{{ path('app_master_work_order_check_sheet_edit', {'id': workOrderCheckSheet.id}) }}">Edit</a>
    {% endif %}
    {% if is_granted('ROLE_CHECK_SHEET_ADD') %}
        <a class="btn btn-success btn-sm" href="{{ path('app_master_work_order_check_sheet_new') }}">Add</a>
    {% endif %}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ workOrderCheckSheet.name }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ workOrderCheckSheet.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/work_order_check_sheet/_delete_form.html.twig') }}#}
{% endblock %}
