{% extends 'layout_page.html.twig' %}

{% block title 'Show Currency' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_currency_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_currency_edit', {'id': currency.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ currency.code }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ currency.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ currency.name }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/currency/_delete_form.html.twig') }}#}
{% endblock %}
