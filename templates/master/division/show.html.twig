{% extends 'layout_page.html.twig' %}

{% block title 'Show Division' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_division_index') }}">Manage</a>
    {% if is_granted('ROLE_DIVISION_EDIT') %}
        <a class="btn btn-warning btn-sm" href="{{ path('app_master_division_edit', {'id': division.id}) }}">Edit</a>
    {% endif %}
    {% if is_granted('ROLE_DIVISION_ADD') %}
        <a class="btn btn-success btn-sm" href="{{ path('app_master_division_new') }}">Add</a>
    {% endif %}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ division.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ division.name }}</td>
            </tr>
            <tr>
                <th>Remark</th>
                <td>{{ division.remark }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ division.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/division/_delete_form.html.twig') }}#}
{% endblock %}
