    <br />

    <fieldset>
        <legend class="float-none w-auto text-dark px-1">Penggunaan Sample Setelan Diecut / Emboss</legend>
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Serah Terima Sample Sebelum Setel</div>
                        </div>
                        <div class="row">
                            <table class="detail" style="width: 95%">
                                <thead>
                                    <tr>
                                        <th rowspan="2">Jumlah Sample diberikan</th>
