{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    <div class="my-3 px-3 bg-light" {{ grid.filter_link(form) }}>
        <div class="row">
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Transaction Date</label>
                    <div class="col-sm-10 w-75">
                        <div class="row">
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'transactionDate', [form.filter['transactionDate'].0.vars.choices.0.value, true, false]) }} value="{{ form.filter.transactionDate.1.vars.value }}" />
                            </div>
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'transactionDate', [form.filter['transactionDate'].0.vars.choices.0.value, false, true]) }} value="{{ form.filter.transactionDate.2.vars.value }}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Code Number</label>
                    <div class="col-sm-10 w-75">
                        <input style="width: 64px" type="number" {{ grid.filter_link_item(form, 'codeNumberOrdinal') }} value="{{ form.filter.codeNumberOrdinal.1.vars.value }}" />
                        <span><small>/{{ constant('App\\Entity\\Accounting\\DepositHeader::CODE_NUMBER_CONSTANT') }}/</small></span>
                        <select {{ grid.filter_link_item(form, 'codeNumberMonth') }}>
                            {% for value, label in constant('App\\Entity\\AccountingHeader::MONTH_ROMAN_NUMERALS') %}
                                {% set val = value == 0 ? '' : value %}
                                <option value="{{ val }}" {% if form.filter.codeNumberMonth.1.vars.value == val %}selected="selected"{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                        <span><small>/</small></span>
                        <input style="width: 64px" type="number" {{ grid.filter_link_item(form, 'codeNumberYear') }} value="{{ form.filter.codeNumberYear.1.vars.value }}" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-grid">
        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-primary btn-sm"
                        data-controller="redirection"
                        data-redirection-url-value="{{ path('app_report_deposit_header__list') }}"
                        data-redirection-form-target-value="form[name={{ form.vars.name }}]"
                        data-redirection-extra-values-param="{{ {export: 'export'}|json_encode }}"
                        data-action="redirection#redirect">
                    Export
                </button>
            </div>
        </div>
    </div>

    {{ grid.info(form, count, depositHeaders) }}

    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan Penerimaan Kas/Bank</div>
        <div>
            {% set startDate = form.vars.value.filter.transactionDate.1|default %}
            {% set endDate = form.vars.value.filter.transactionDate.2|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Penerimaan #</th>
                <th class="text-start">Tanggal</th>
                <th class="text-start">Kode Account</th>
                <th class="text-start">Nama Account</th>
                <th class="text-start">Note</th>
            </tr>
            <tr>
                <td colspan="5">
                    <table>
                        <thead>
                            <tr>
                                <th class="text-start">Kode Account</th>
                                <th class="text-start">Nama Account</th>
                                <th class="text-start">Description</th>
                                <th class="text-start">Amount</th>
                                <th class="text-start">Memo</th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for depositHeader in depositHeaders %}
                <tr>
                    <td class="text-start">{{ depositHeader.codeNumber|default }}</td>
                    <td class="text-start">{{ depositHeader.transactionDate|default ? depositHeader.transactionDate|date('j M Y') }}</td>
                    <td class="text-start">{{ depositHeader.account.code|default }}</td>
                    <td class="text-start">{{ depositHeader.account.name|default }}</td>
                    <td class="text-start">{{ depositHeader.note|default }}</td>
                </tr>
                <tr class="border-bottom-dotted-bold">
                    <td colspan="5">
                        <table>
                            <tbody>
                                {% for depositDetail in depositHeader.depositDetails %}
                                    <tr>
                                        <td class="text-start">{{ depositDetail.account.code|default }}</td>
                                        <td class="text-start">{{ depositDetail.account.name|default }}</td>
                                        <td class="text-start">{{ depositDetail.description|default }}</td>
                                        <td class="text-end">{{ depositDetail.amount|default|number_format(2) }}</td>
                                        <td class="text-start">{{ depositDetail.memo|default }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="border-top-solid-normal">
                                <tr>
                                    <td class="text-end" colspan="3"><strong>Total Amount</strong></td>
                                    <td class="text-end"><strong>{{ depositHeader.totalAmount|default|number_format(2) }}</strong></td>
                                    <td>&nbsp;</td>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, depositHeaders) }}
</div>
