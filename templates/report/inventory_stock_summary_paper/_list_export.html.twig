<table>
    <thead>
        <tr>
            <th style="text-align: center" colspan="3"><strong>PT. Putracipta Karindomas</strong></th>
        </tr>
        <tr>
            <th style="text-align: center" colspan="3"><strong>Laporan Stok Gudang Kertas</strong></th>
        </tr>
        <tr>
            <th style="text-align: center" colspan="3">
                <strong>
                    {% set endDate = form.vars.value.filter['inventory:transactionDate'].1|default %}
                    {{ endDate ? endDate|date('j F Y') }}
                </strong>
            </th>
        </tr>
        <tr>
            <th colspan="3"></th>
        </tr>
        <tr>
            <th style="text-align: center; width: 100pt"><strong>Kode Kertas</strong></th>
            <th style="text-align: center; width: 100pt"><strong>Nama Kertas</strong></th>
            <th style="text-align: center; width: 100pt"><strong>Stok</strong></th>
        </tr>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        {% for paper in papers %}
            {% set endingStock = endingStockList[paper.id]|default(0) %}
            {% if (endingStock != 0) %}
                <tr>
                    <td style="text-align: left">{{ paper.codeNumber|default }}</td>
                    <td style="text-align: left">{{ paper.name|default }}</td>
                    <td style="text-align: center">{{ endingStock|default }}</td>
                </tr>
                <tr>
                    <th colspan="3"></th>
                </tr>
            {% endif %}
        {% endfor %}
    </tbody>
</table>