{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    <div class="my-3 px-3 bg-light" {{ grid.filter_link(form) }}>
        <div class="row">
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Transaction Date</label>
                    <div class="col-sm-10 w-75">
                        <div class="row">
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'purchaseOrderPaperHeader:transactionDate', [form.filter['purchaseOrderPaperHeader:transactionDate'].0.vars.choices.0.value, true, false]) }} value="{{ form.filter['purchaseOrderPaperHeader:transactionDate'].1.vars.value }}" />
                            </div>
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'purchaseOrderPaperHeader:transactionDate', [form.filter['purchaseOrderPaperHeader:transactionDate'].0.vars.choices.0.value, false, true]) }} value="{{ form.filter['purchaseOrderPaperHeader:transactionDate'].2.vars.value }}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {#<div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Code Number</label>
                    <div class="col-sm-10 w-75">
                        <input style="width: 64px" type="number" {{ grid.filter_link_item(form, 'codeNumberOrdinal') }} value="{{ form.filter.codeNumberOrdinal.1.vars.value }}" />
                        <span><small>/{{ constant('App\\Entity\\Sale\\SaleOrderHeader::CODE_NUMBER_CONSTANT') }}/</small></span>
                        <select {{ grid.filter_link_item(form, 'codeNumberMonth') }}>
                            {% for value, label in constant('App\\Entity\\PurchaseHeader::MONTH_ROMAN_NUMERALS') %}
                                {% set val = value == 0 ? '' : value %}
                                <option value="{{ val }}" {% if form.filter.codeNumberMonth.1.vars.value == val %}selected="selected"{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                        <span><small>/</small></span>
                        <input style="width: 64px" type="number" {{ grid.filter_link_item(form, 'codeNumberYear') }} value="{{ form.filter.codeNumberYear.1.vars.value }}" />
                    </div>
                </div>
            </div>#}
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Supplier</label>
                    <div class="col-sm-10 w-75">
                        <select class="form-select" {{ grid.filter_link_item(form, 'company') }}>
                            <option value="" {% if form.filter.company.1.vars.value == '' %}selected="selected"{% endif %}></option>
                            {% for choice in form.filter.company.1.vars.choices %}
                                <option value="{{ choice.value }}" {% if form.filter.company.1.vars.value == choice.value %}selected="selected"{% endif %}>{{ choice.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            {#<div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Status</label>
                    <div class="col-sm-10 w-75">
                        <input class="form-control" type="text" {{ grid.filter_link_item(form, 'transactionStatus') }} value="{{ form.filter.transactionStatus.1.vars.value }}" />
                    </div>
                </div>
            </div>#}
        </div>
    </div>

    <div class="d-grid">
        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-primary btn-sm"
                        data-controller="redirection"
                        data-redirection-url-value="{{ path('app_report_supplier_purchase_order_paper__list') }}"
                        data-redirection-form-target-value="form[name={{ form.vars.name }}]"
                        data-redirection-extra-values-param="{{ {export: 'export'}|json_encode }}"
                        data-action="redirection#redirect">
                    Export
                </button>
            </div>
        </div>
    </div>

    {{ grid.info(form, count, suppliers) }}

    <hr />
</div>
    
<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan PO per Supplier</div>
        <div>
            {% set startDate = form.vars.value.filter['purchaseOrderPaperHeader:transactionDate'].1|default %}
            {% set endDate = form.vars.value.filter['purchaseOrderPaperHeader:transactionDate'].2|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Kode</th>
                <th class="text-start">Nama Supplier</th>
                <th class="text-start">Note</th>
            </tr>
            <tr>
                <td colspan="3">
                    <table>
                        <thead>
                            <tr>
                                <th class="text-start">PO #</th>
                                <th class="text-start">Tanggal</th>
                                <th class="text-start">Status</th>
                                <th class="text-start">Remark</th>
                                <th class="text-start">Total</th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for supplier in suppliers %}
                <tr>
                    <td class="text-start">{{ supplier.code|default }}</td>
                    <td class="text-start">{{ supplier.company|default }}</td>
                    <td class="text-start">{{ supplier.note|default }}</td>
                </tr>
                <tr class="border-bottom-dotted-bold">
                    <td colspan="3">
                        <table>
                            <tbody>
                                {% set totalSum = '0.00' %}
                                {% for purchaseOrderPaperHeader in purchaseOrderPaperHeaders[supplier.id] %}
                                    <tr>
                                        <td class="text-start">{{ purchaseOrderPaperHeader.codeNumber|default }}</td>
                                        <td class="text-start">{{ purchaseOrderPaperHeader.transactionDate|default ? purchaseOrderPaperHeader.transactionDate|date('j F Y') }}</td>
                                        <td class="text-start">{{ purchaseOrderPaperHeader.transactionStatus|default }}</td>
                                        <td class="text-start">{{ purchaseOrderPaperHeader.note|default }}</td>
                                        <td class="text-end">{{ purchaseOrderPaperHeader.grandTotal|default|number_format(2) }}</td>
                                    </tr>
                                    {% set totalSum = totalSum + purchaseOrderPaperHeader.grandTotal %}
                                {% endfor %}
                            </tbody>
                            <tfoot class="border-top-solid-normal">
                                <tr>
                                    <td class="text-end" colspan="4"><strong>Total</strong></td>
                                    <td class="text-end"><strong>{{ totalSum|number_format(2) }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, suppliers) }}
</div>
